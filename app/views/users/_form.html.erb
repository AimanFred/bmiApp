<! -- generate error message if user cannot be saved -->
  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <! -- class for user input column -->
    <div class="info-column">
      
      <! -- user input name -->
      <div class="name-box">
        <%= form.label :name, style: "display: inline" %>
        <%= form.text_field :name %>
      </div>

      <! -- user input age -->
      <div class="age-box">
        <%= form.label :age, style: "display: inline" %>
        <%= form.number_field :age, min: "1" %>
      </div>
  
      <! -- user input weight -->
      <div class="weight-box">
        <%= form.label :weight, style: "display: inline" %>
        <%= form.number_field :weight, min: "1" %>
      </div>

      <! -- user input height -->
      <div class="height-box">
        <%= form.label :height, style: "display: inline" %>
        <%= form.number_field :height, min: "1" %>
      </div>

      <! -- submit button -->
      <div class="calculate">
        <%= form.submit "Submit" %>
      </div>
    </div>
  <% end %>

