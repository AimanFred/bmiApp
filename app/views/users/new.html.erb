<! -- webpage header -->
  <div class="header">
    <h1>BMI</h1>
    <h2>CALCULATOR</h2>
    <%= image_tag "Vector.png" %>
    <p>Home</p>
  </div>

<! -- left column which contains the form -->
  <div class="left-column">

    <p>Let's count your BMI</p>

    <%= render "form", user: @user %>

    <%= image_tag "Frame.png" %>

    <br>

  </div>
<! -- right column which contains the result of BMI -->
  <div class="right-column">

    <p>Your BMI</p>

    <! -- class to style BMI result box -->
    <div class="bmi-box">
      <h1> <%= @user.bmi %> </h1>
      <br>
      <h2> <%= @user.report %> </h2>
      <p>Aww <%= @user.name %>! <br> You are <%= @user.report %>!</p>
    </div>

    <%= image_tag "Group7.png" %>

  </div>